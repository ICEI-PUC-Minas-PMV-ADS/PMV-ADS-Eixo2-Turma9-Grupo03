@model dev_backend_habitly_eixo2.Models.Habito
@{
    ViewData["Title"] = "Detalhes do Hábito";
}

<style>
    /* ===== Tema Habitly (coeso com suas outras páginas) ===== */
    :root {
        --primary: #007A80;
        --text: #2b2f33;
        --muted: #6b7280;
        --soft: #f5f7f7;
        --border: rgba(0,0,0,.10);
        --danger: #dc3545;
    }

    body {
        background: var(--soft);
        color: var(--text);
        font-family: 'Inter',system-ui,-apple-system,sans-serif;
    }

    .page-title {
        font-weight: 900;
        color: var(--primary);
        letter-spacing: .2px;
        margin: 22px 0 12px;
        font-size: clamp(24px,3vw,34px);
    }

    .card {
        background: #fff;
        border: 1px solid var(--border);
        border-radius: 16px;
        box-shadow: 0 8px 30px rgba(0,0,0,.05);
    }

    .card-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 18px 20px;
        border-bottom: 1px solid var(--border);
    }

    .card-title {
        margin: 0;
        font-weight: 800;
        font-size: clamp(18px,2.2vw,24px);
    }

    .badge {
        display: inline-block;
        padding: 6px 10px;
        border-radius: 999px;
        font-weight: 700;
        font-size: 12px;
        letter-spacing: .3px;
        text-transform: uppercase;
        background: #e7f9f9;
        color: var(--primary);
        border: 1px solid rgba(0,122,128,.25);
    }

        .badge.off {
            background: #fff3cd;
            color: #8a6d3b;
            border-color: #f3d98b;
        }

        .badge.done {
            background: #e6f4ea;
            color: #1e7e34;
            border-color: #cbe8d1;
        }

    .card-body {
        padding: 20px;
    }

    .grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 14px 20px;
    }

        .grid .label {
            font-size: 12px;
            font-weight: 700;
            color: var(--muted);
            text-transform: uppercase;
            letter-spacing: .4px;
            margin-bottom: 6px;
        }

        .grid .value {
            font-size: 16px;
            font-weight: 600;
            color: var(--text);
            background: #fafafa;
            border: 1px solid var(--border);
            border-radius: 12px;
            padding: 12px 14px;
        }

    .desc {
        grid-column: 1 / -1;
    }

        .desc .value {
            background: #fff;
        }

    .actions, .share {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        padding: 18px 20px;
        border-top: 1px solid var(--border);
    }

    .share {
        justify-content: flex-start;
        align-items: center;
    }

        .share h5 {
            margin: 0 12px 0 0;
            font-size: 14px;
            font-weight: 800;
            color: var(--muted);
            text-transform: uppercase;
            letter-spacing: .5px;
        }

    .btn {
        display: inline-block;
        padding: 10px 16px;
        border-radius: 12px;
        font-weight: 700;
        text-decoration: none;
        border: 2px solid transparent;
        transition: transform .15s ease, filter .15s ease;
    }

        .btn:hover {
            transform: translateY(-1px);
            filter: brightness(.98);
        }

    .btn-primary {
        background: var(--primary);
        border-color: var(--primary);
        color: #fff;
    }

    .btn-danger {
        background: var(--danger);
        border-color: var(--danger);
        color: #fff;
    }

    .btn-secondary {
        background: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }

    }
</style>

<h1 class="page-title">Detalhes do Hábito</h1>

<div class="card">
    <div class="card-header">
        <h2 class="card-title">@Model.TituloHabito</h2>

        @{
            // mapeia status em badge
            // Ajuste conforme seu enum StatusHabito
            var statusText = Model.StatusHabito?.ToString() ?? "Ativo";
            var badgeCls = "badge";
            if (statusText.Equals("Concluido", StringComparison.OrdinalIgnoreCase) || statusText.Equals("Concluído", StringComparison.OrdinalIgnoreCase))
                badgeCls += " done";
            else if (statusText.Equals("Pausado", StringComparison.OrdinalIgnoreCase) || statusText.Equals("Inativo", StringComparison.OrdinalIgnoreCase))
                badgeCls += " off";
        }
        <span class="@badgeCls">@statusText</span>
    </div>

    <div class="card-body">
        <div class="grid">
            <div>
                <div class="label">Início</div>
                <div class="value">@Model.DataInicio.ToString("dd/MM/yyyy")</div>
            </div>

            <div>
                <div class="label">Término</div>
                <div class="value">@Model.DataFim.ToString("dd/MM/yyyy")</div>
            </div>

            <div class="desc">
                <div class="label">Descrição</div>
                <div class="value">@Model.DescricaoHabito</div>
            </div>
        </div>
    </div>
    <!-- Minhas Conquistas -->
    @if (ViewBag.Conquistas != null && ViewBag.Conquistas.Count > 0)
    {
        <div class="card-body mt-3">
            <h4>🎖 Minhas Conquistas</h4>

            <ul class="list-group">
                @foreach (var c in ViewBag.Conquistas)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>Meta: @c.MetaDias dias — alcançada em @c.DataConquista.ToString("dd/MM/yyyy")</span>
                        <span class="badge bg-success">🏆 alcançada</span>
                    </li>
                }
            </ul>
        </div>
    }
    else
    {
        <div class="card-body mt-3">
            <h4>🎖 Minhas Conquistas</h4>
            <p>Nenhuma conquista alcançada ainda… continue firme! 💪</p>
        </div>
    }



    <!-- Compartilhamento -->
    <div class="share">
        <h5>Compartilhar</h5>
        @{
            var titulo = Uri.EscapeDataString($"Concluí meu hábito '{Model.TituloHabito}' no Habitly! 🎯");
            var link = Uri.EscapeDataString($"https://meusite.com/habito/{Model.IdHabito}");
        }
        <a class="btn btn-primary" target="_blank" href="https://api.whatsapp.com/send?text=@titulo%20@link">WhatsApp</a>
        <a class="btn btn-twitter" target="_blank" href="https://twitter.com/intent/tweet?text=@titulo%20@link"> X / Twitter </a>
        <a class="btn btn-facebook" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=@link&quote=@titulo">Facebook</a>

    </div>

    <!-- Ações -->
    <div class="actions">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.IdHabito">Editar</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.IdHabito">Excluir</a>
        <a class="btn btn-secondary" asp-action="Index">Voltar à Lista</a>
    </div>
</div>
