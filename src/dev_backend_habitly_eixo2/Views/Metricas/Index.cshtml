@model IEnumerable<dev_backend_habitly_eixo2.Controllers.MetricaHabitoViewModel>


@{
    ViewData["Title"] = "Métricas";
}

<h1>Minhas Métricas</h1>



<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">

                    
                    <h5 class="card-title text-primary">@Html.DisplayFor(modelItem => item.TituloHabito)</h5>

                    <hr />

                   
                    <div class="text-center mb-3">
                        <span style="font-size: 2.5rem; font-weight: bold; color: #ffc107;">
                            🔥 @Html.DisplayFor(modelItem => item.StreakAtual)
                        </span>
                        <p class="card-text text-muted">Dias de Streak Atual</p>
                    </div>

                  
                    <p class="card-text text-center">
                        Recorde Máximo: <strong class="text-success">@Html.DisplayFor(modelItem => item.StreakMaximo) dias</strong>
                    </p>

                    <hr />

       
                    <div class="d-grid gap-2">
  
                        <button class="btn btn-success btn-lg mb-2" onclick="marcarConcluido(@item.IdHabito)">
                            Concluído Hoje! ✔️
                        </button>
                    </div>

                    <div class="text-center mt-3">

                        <a asp-action="Edit" asp-controller="Habitos" asp-route-id="@item.IdHabito" class="btn btn-sm btn-outline-secondary me-2">✏️ Editar Hábito</a>
                        <a asp-action="Details" asp-controller="Habitos" asp-route-id="@item.IdHabito" class="btn btn-sm btn-outline-info me-2">ℹ️ Detalhes</a>
                        <a asp-action="Delete" asp-controller="Habitos" asp-route-id="@item.IdHabito" class="btn btn-sm btn-outline-danger">🗑️ Excluir</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>