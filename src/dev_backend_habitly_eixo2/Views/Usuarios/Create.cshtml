@model dev_backend_habitly_eixo2.Models.Usuarios

@{
    ViewData["Title"] = "Create";
}
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;900&display=swap" rel="stylesheet">

<style>
    /* ===== Tema ===== */
    :root {
        --primary: #007A80;
        --text: #2b2f33;
        --muted: #495057;
        --bg: #ffffff;
        --soft: #f5f7f7;
        --border: rgba(0,0,0,.10);
        --danger: #e03131;
    }

    body {
        font-family: 'Inter',system-ui,-apple-system,sans-serif;
        background: var(--soft);
        color: var(--text);
    }

    /* Títulos */
    h1 {
        font-size: clamp(24px,3.5vw,36px);
        font-weight: 900;
        color: var(--primary);
        letter-spacing: .3px;
        margin: 36px auto 8px;
    }

    h4 {
        font-size: 18px;
        font-weight: 700;
        color: var(--muted);
        margin: 0 0 8px;
    }

    /* Linha separadora suave */
    hr {
        border: none;
        border-top: 1px solid var(--border);
        margin: 12px 0 20px;
    }

    /* Container e card do formulário  */
    .row {
        display: flex;
        justify-content: center;
        margin: 0;
    }

    .col-md-4 {
        width: 100%;
        max-width: 560px; /* centraliza e limita a largura */
        background: #fff;
        border: 1px solid var(--border);
        border-radius: 16px;
        box-shadow: 0 8px 30px rgba(0,0,0,.05);
        padding: 22px;
    }

    /* Agrupamento dos campos */
    .form-group {
        margin-bottom: 14px;
    }

    /* Labels */
    .control-label {
        display: block;
        font-size: 14px;
        font-weight: 600;
        color: var(--muted);
        margin-bottom: 6px;
    }

    /* Inputs e selects */
    .form-control {
        width: 100%;
        padding: 12px 14px;
        border: 1.5px solid #e5e7eb;
        border-radius: 12px;
        background: #fff;
        color: var(--text);
        font-size: 15px;
        transition: border-color .15s ease, box-shadow .15s ease;
    }

        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(0,122,128,.12);
        }

    /* Validação */
    .text-danger {
        color: var(--danger);
        font-size: 13px;
        margin-top: 6px;
        display: block;
    }

    .input-validation-error {
        border-color: var(--danger) !important;
        background: #fff7f7;
    }

    .validation-summary-errors ul {
        margin: 0 0 10px 18px;
    }

    /* Botões (mantendo classes existentes) */
    .btn {
        display: inline-block;
        padding: 12px 20px;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 600;
        text-decoration: none;
        cursor: pointer;
        transition: all .2s ease;
        border: 2px solid transparent;
    }

    .btn-primary {
        background: var(--primary);
        border-color: var(--primary);
        color: #fff;
        box-shadow: 0 4px 10px rgba(0,122,128,.18);
    }

        .btn-primary:hover {
            background: #009093;
            border-color: #009093;
            transform: translateY(-1px);
        }

    /* Link "Back to List" como botão contornado, sem mudar HTML */
    div + div > a[asp-action="Index"],
    div + a[asp-action="Index"] {
        display: inline-block;
        margin-top: 16px;
        padding: 10px 16px;
        border-radius: 10px;
        font-weight: 600;
        border: 2px solid var(--primary);
        color: var(--primary);
        text-decoration: none;
        transition: all .2s ease;
    }

        div + div > a[asp-action="Index"]:hover,
        div + a[asp-action="Index"]:hover {
            background: var(--primary);
            color: #fff;
        }

    /* Responsivo */
    (max-width:540px) {
        .col-md-4

    {
        padding: 18px;
    }

    .btn, .btn-primary {
        width: 100%;
        text-align: center;
    }

    }
</style>

<h1 style="text-align:center;">Cadastre-se!</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome completo:</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Escolha seu melhor e-mail:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Senha" class="control-label">Senha:</label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Perfil" class="control-label">Selecione o perfil de usuário:</label>
                <select asp-for="Perfil" class="form-control" asp-items="Html.GetEnumSelectList<Perfil>()"></select>
                <span asp-validation-for="Perfil" class="text-danger"></span>
            </div>

            <!-- Campo extra: chave de administrador (só aparece quando seleciona Admin) -->
            <div class="form-group" id="adminKeyGroup" style="display:none;">
                <label class="control-label">Chave de administrador:</label>
                <input name="AdminKey" type="password" class="form-control" />
                <small class="text-muted">Informe a palavra-chave para cadastrar como Administrador.</small>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        (function () {
            const sel = document.querySelector('[name="Perfil"]');
            const grp = document.getElementById('adminKeyGroup');

            function isAdminSelected() {
                if (!sel) return false;
                const text = sel.options[sel.selectedIndex]?.text?.trim().toLowerCase();
                const val  = (sel.value || '').trim();
                // cobre tanto value por texto ("Admin") quanto por número (0)
                return text === 'admin' || val === 'Admin' || val === '0';
            }

            function toggle() { grp.style.display = isAdminSelected() ? '' : 'none'; }

            sel?.addEventListener('change', toggle);
            toggle(); // estado inicial
        })();
    </script>
}
