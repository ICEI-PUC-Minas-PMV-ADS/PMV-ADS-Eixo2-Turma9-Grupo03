@model IEnumerable<dev_backend_habitly_eixo2.Models.Usuarios>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Usuários</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Criar novo usuário!</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Senha)
            </td>
            <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.IdUsuario">Editar</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.IdUsuario">Visualizar</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdUsuario">Excluir</a> |
            </td>
        </tr>
}
    </tbody>
</table>
